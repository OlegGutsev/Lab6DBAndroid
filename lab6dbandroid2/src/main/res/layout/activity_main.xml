<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="by.bstu.fit.oleggutsev.lab6dbandroid2.MainActivity" android:orientation="vertical">


    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/Search_editText" android:layout_weight="1" tools:text="12345"
                android:inputType="textPhonetic|number"/>
        <Button
                android:text="Поиск"
                android:onClick="Search_onClick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_weight="1"
                style="@android:style/Widget.Button.Inset"/>
    </LinearLayout>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/Result_textView" tools:text="123456"/>
</LinearLayout>
